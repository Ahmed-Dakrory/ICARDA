<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F7F7"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="35dp"
            android:layout_width="368dp"
            android:layout_height="50dp"
            android:weightSum="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/DeviceStateMain"
                android:textColor="#FFC107"
                android:fontFamily="sans-serif"
                android:textFontWeight="722"
                android:layout_weight="0.2"
                android:text="Device State"
                android:textSize="55px" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/bluetoothState"
                android:layout_weight="0.8"
                android:src="@drawable/bluetooth_off"
                tools:layout_editor_absoluteX="221dp"
                tools:layout_editor_absoluteY="192dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.5"
                android:text="PH"
                android:textColor="#2196F3"
                android:textFontWeight="800"
                android:textSize="55px" />

            <TextView
                android:id="@+id/displayPH"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.5"
                android:text="------"
                android:textColor="#2196F3"
                android:textFontWeight="300"
                android:textSize="55px" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.5"
                android:text="ES"
                android:textColor="#2196F3"
                android:textFontWeight="800"
                android:textSize="55px" />

            <TextView
                android:id="@+id/displayEs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.5"
                android:text="------"
                android:textColor="#2196F3"
                android:textFontWeight="300"
                android:textSize="55px" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.3"
                android:text="Lat:"
                android:id="@+id/latValue"
                android:textColor="#2196F3"
                android:textFontWeight="800"
                android:textSize="55px" />

            <TextView
                android:id="@+id/longitudeValue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Long:"
                android:layout_weight="0.3"
                android:textColor="#2196F3"
                android:textFontWeight="300"
                android:textSize="55px" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:id="@+id/getLocation"
                android:src="@drawable/side_nav_bar"/>
        </LinearLayout>


    <LinearLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="0.5"
            android:text="Address:"
            android:id="@+id/addressMain"
            android:textColor="#2196F3"
            android:textFontWeight="800"
            android:textSize="55px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="0.5"
            android:id="@+id/address"
            android:text="------"
            android:textColor="#2196F3"
            android:textFontWeight="800"
            android:textSize="55px" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="vertical">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chartph"
                android:layout_width="match_parent"
                android:layout_height="200dp" />


            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chartes"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>